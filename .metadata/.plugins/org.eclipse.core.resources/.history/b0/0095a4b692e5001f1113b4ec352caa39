#pragma once

#ifndef BLINK_LED_H_
#define BLINK_LED_H_

#include <stdint.h>

int32_t static *pGPIOA_CLK_EN;
int32_t static *pGPIOA_MODE_OUT;
int32_t static *pGPIOA_DATA_OUT;

typedef enum {
	AUTO_BLINK = 	(1 << 1),
	ON = 			(1 << 0),
	OFF = 			0
} boardLedStatus_e;

extern uint8_t boardLedStatus;

void blinkLed(int32_t const ledMode);

#endif /* BLINK_LED_H_ */
